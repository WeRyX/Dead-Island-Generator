var weapons = [
    "Baseball Bat", "Diving Knife", "Hanbo", "Military Knife", "Wakazashi"
];

class WeaponClass {

    constructor(name, colour, affixes, items) {
        this.name = name;
        this.colour = colour;
        this.affixes = affixes;

        this.weapons = (items? items : weapons);
    }

    getRandomAffix() {
        return this.affixes[Math.floor(Math.random() * this.affixes.length)];
    }

    getRandomItem() {
        return this.weapons[Math.floor(Math.random() * this.weapons.length)];
    }

}

class Weapon {

    constructor() {
        this.weaponClass = randomWeaponClass();
        this.affix = this.weaponClass.getRandomAffix();
        this.name = this.weaponClass.getRandomItem();
    }

}

